    <bottom>
        <HBox alignment="BOTTOM_RIGHT" fillHeight="false" prefHeight="49.0" prefWidth="600.0" BorderPane.alignment="BOTTOM_RIGHT">
            <children>
                <Button fx:id="cancel" alignment="BOTTOM_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onCancel" text="Cancel">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Button>
                <Button fx:id="save" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onSave" text="Save">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin></Button>
            </children>
        </HBox>
    </bottom>
    <center>
        <HBox>
            <children>
                <VBox prefHeight="309.0" prefWidth="0.0" HBox.hgrow="ALWAYS">
                    <children>
                  <TextField fx:id="fieldArmyName" onKeyTyped="#onArmyName" promptText="Army name" text="Army name" />
                  <MenuButton fx:id="menuUnitType" mnemonicParsing="false" prefHeight="23.0" prefWidth="405.0" text="UnitType">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </MenuButton>
                  <TextField fx:id="fieldName" promptText="Name" />
                  <TextField fx:id="fieldHealthPoints" promptText="Health points" />
                  <TextField fx:id="fieldCount" promptText="Count" />
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onAdd" styleClass="button-big" text="Add">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Text fx:id="txtErrorMsg" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-small" wrappingWidth="200.0">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Text>
                  <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="520.0" prefWidth="355.0">
                     <content>
                        <VBox fx:id="vBoxAdd" prefHeight="200.0" prefWidth="100.0" />
                     </content>
                  </ScrollPane>
                    </children>
                </VBox>
                <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="309.0" prefWidth="267.0" HBox.hgrow="ALWAYS">
                    <content>
                        <VBox fx:id="detailsWindow" alignment="CENTER_LEFT" prefHeight="307.0" prefWidth="285.0">
                            <children>
                                <Text fx:id="txtArmyName" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-small" />
                        <HBox fx:id="armyContainer" prefHeight="0.0" prefWidth="291.0" />
                        <TableView fx:id="tableUnits" prefHeight="246.0" prefWidth="291.0" VBox.vgrow="ALWAYS">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy></TableView>
                            </children>
                            <padding>
                                <Insets left="20.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </center>
    <top>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title" text="Create new army" BorderPane.alignment="TOP_LEFT">
            <BorderPane.margin>
                <Insets left="20.0" top="6.0" />
            </BorderPane.margin></Text>
    </top>
